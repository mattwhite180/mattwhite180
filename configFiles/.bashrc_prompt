
# Text Colors
BLACK=30
BLUE=34
CYAN=36
GREEN=32
PURPle=35
RED=31
WHITE=37
YELLOW=33

# Text Background Colors
BLACK_BACKGROUND=40
BLUE_BACKGROUND=44
CYAN_BACKGROUND=46
GREEN_BACKGROUND=42
PURPLE_BACKGROUND=45
RED_BACKGROUND=41
WHITE_BACKGROUND=47
YELLOW_BACKGROUND=43

# Text Attributes
NORMAL_TEXT=0
UNDERLINED=4
INVERTED_BACKGROUND=7

MY_BACKGROUND=$BLACK_BACKGROUND

PROMPT_USERNAME='\[\033['$MY_BACKGROUND';'$BLUE'm\]\u'
PROMPT_AT='\[\033['$MY_BACKGROUND';'$GREEN'm\]@'
PROMPT_HOSTNAME='\[\033['$MY_BACKGROUND';'$RED'm\]\h'
PROMPT_COLON='\[\033['$NORMAL_BACKGROUND'00m\]:'
PROMPT_WORKDIR='\[\033[;'$UNDERLINED';'$YELLOW'm\]\w'
PROMPT_NEWLINE='\[\033['$NORMAL_TEXT';'$CYAN'm\]\n'
PROMPT_SYMBOL='[\$]: '
PROMPT_CLEANUP='\[\033['$NORMAL_TEXT';'$WHITE'm\]'

NEW_PS1=$PROMPT_USERNAME$PROMPT_AT$PROMPT_HOSTNAME$PROMPT_COLON$PROMPT_WORKDIR$PROMPT_NEWLINE$PROMPT_SYMBOL$PROMPT_CLEANUP

#NEW_PS1='\[\033['$MY_BACKGROUND';'$BLUE'm\]\u\[\033['$MY_BACKGROUND';'$GREEN'm\]@\[\033['$MY_BACKGROUND';'$RED'm\]\h\[\033[00m\]:\[\033['$UNDERLINED';'$YELLOW'm\]\w\[\033['$NORMAL_TEXT';'$CYAN'm\]\n\$ \[\033['$NORMAL_TEXT';'$WHITE'm\]'
